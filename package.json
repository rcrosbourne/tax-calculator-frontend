  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@tailwindcss/forms": "^0.4.0",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "concurrently": "^6.5.1",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "tailwindcss": "^3.0.7",
    "typescript": "4.5.4"
  }
}
